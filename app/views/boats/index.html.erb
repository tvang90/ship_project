<h1>Boats</h1>
<%= link_to "Add a Boat?", new_boat_path %>
<div class="boatDisplay">
  <ul>
    <% @boats.each do |boat| %>
        <li><strong>Boat Name: </strong><%= boat.name %></li>
        <li><strong>Location: </strong><%= boat.location %></li>
        <li><strong>Containers: </strong><%= boat.containers %></li>
        <li><strong>Boat Image: </strong><br><%= image_tag boat.image.url(:medium) %></li>
          <% boat.jobs.each do |job| %>
          <li><strong>Job Title: </strong><%= job.name %></li>
          <div id="cargoDisplay">
            <li><strong>Cargo Description: </strong><%= job.cargo %></li>
          </div>
          <li><strong>Cost: </strong><%= job.cost %></li>
          <li><strong>Origin: </strong><%= job.origin %></li>
          <li><strong>Destination: </strong><%= job.destination %></li>

          <% end %><br>
      <div class="boatLinks">
        <li><%= link_to "Assign a Job", new_boat_job_path(boat.id) %></li>
        <div id="boats"><li><%= link_to "Follow", follows_path(follow: {boat_id: boat.id, user_id: current_user.id}), method: :post, remote: true, class: "follow-boat",
          confirm: "Are you sure you want to follow this boat?" %></li>
        </div>
        <li><%= link_to "Delete Boat", boat_path(boat), method: :delete %></li>
      </div><br><br><br>
    <% end %> 
  </ul>
</div>