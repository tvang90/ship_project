<h1>Boats</h1>

<ul>
  <% @boats.each do |boat| %>
      <li>Boat Name: <%= boat.name %></li>
      <li>Location: <%= boat.location %></li>
      <li>Containers: <%= boat.containers %></li>
      <li>Boat Image: <br><%= image_tag boat.image.url(:medium) %></li>
      <li><%= link_to "Assign a Job", new_boat_job_path(boat.id) %></li>
      <div id="boats"><li><%= link_to "Follow", follows_path(follow: {boat_id: boat.id, user_id: current_user.id}), method: :post, remote: true, class: "follow-boat",
        confirm: "Are you sure you want to follow this boat?" %></li>
      </div>
      <li><%= link_to "Delete Boat", boat_path(boat), method: :delete %></li>
  <% end %>

  <%= link_to "Add a Boat?", new_boat_path %>
</ul>