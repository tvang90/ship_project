<ul>
  <% @jobs.each do |job| %>
    <li>Job Name: <%= job.name %></li>
    <li>Cargo Description: <%= job.cargo %></li>
    <li>Cost: $<%= job.cost %></li>
    <li>Origin: <%= job.origin %></li>
    <li>Destination: <%= job.destination %></li>
    <li><%= link_to "Delete Job", job_path(job), method: :delete %></li>
  <% end %>
</ul>

